{
  "name": "vtms-desktop",
  "version": "1.0.0",
  "description": "VTMS Desktop - Vessel Traffic Management System Electron Application",
  "main": "dist-electron/main.js",
  "type": "module",
  "author": "Niyaz Huseyn-zada",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "bun run dev:backend & bun run dev:electron",
    "dev:backend": "cd backend && bun run dev",
    "dev:electron": "vite",
    "build": "bun run build:backend && bun run build:frontend && bun run build:electron",
    "build:backend": "cd backend && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "build:electron": "electron-builder",
    "type-check": "bun tsc --noEmit && cd frontend && bun tsc --noEmit && cd ../backend && bun tsc --noEmit",
    "package:win": "bun run build && electron-builder --win",
    "package:mac": "bun run build && electron-builder --mac",
    "package:linux": "bun run build && electron-builder --linux",
    "package:all": "bun run build && electron-builder -mwl"
  },
  "workspaces": [
    "frontend",
    "backend",
    "electron"
  ],
  "dependencies": {
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.marintel.vtms",
    "productName": "VTMS Desktop",
    "copyright": "Copyright Â© 2025 Marintel",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "frontend/dist/**/*",
      "backend/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office",
      "synopsis": "Vessel Traffic Management System"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  }
}